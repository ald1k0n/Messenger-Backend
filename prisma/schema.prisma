generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int         @id @unique @default(autoincrement())
  username     String      @unique
  password     String
  friends      Friends[]
  messageId    Messages[]
  messagesId   Int?
  profileImage String?
  socketId     String?
  userGroup    UserGroup[]
  isOnline     Boolean     @default(false)

}



model Friends {
  id     Int   @id @unique @default(autoincrement())
  User   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model Messages {
  id           Int        @id @unique @default(autoincrement())
  text_message String?
  file_message String?
  roomId       String
  messageType  String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  user         User?      @relation(fields: [userId], references: [id])
  userId       Int?
  userGroup    UserGroup? @relation(fields: [userGroupId], references: [id])
  userGroupId  Int?
}

model Group {
  id        String      @id @unique @default(uuid())
  userGroup UserGroup[]
}

model UserGroup {
  id       Int        @id @unique @default(autoincrement())
  user     User       @relation(fields: [userId], references: [id])
  userId   Int
  group    Group      @relation(fields: [groupId], references: [id])
  groupId  String
  messages Messages[]
}
