generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int         @id @unique @default(autoincrement())
  username     String      @unique
  password     String
  friend       Friends[]
  messageId    Messages[]
  messagesId   Int?
  profileImage String?
  socketId     String?
  group        Group[]
  userGroup    UserGroup[]
}

model Friends {
  id     Int   @id @unique @default(autoincrement())
  User   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model Messages {
  id           Int      @id @unique @default(autoincrement())
  text_message String?
  file_message String?
  roomId       String
  messageType  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User?    @relation(fields: [userId], references: [id])
  userId       Int?
  group        Group?   @relation(fields: [groupId], references: [id])
  groupId      String?
}

model Group {
  id        String      @id @unique @default(uuid())
  users     User?       @relation(fields: [userId], references: [id])
  userId    Int?
  messages  Messages[]
  userGroup UserGroup[]
}

model UserGroup {
  id      Int    @id @unique @default(autoincrement())
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
  group   Group  @relation(fields: [groupId], references: [id])
  groupId String
}
